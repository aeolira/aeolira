---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
const allWikiPages = await getCollection("wiki");
---

<link rel="stylesheet" href="/styles/wiki.css">

<BaseLayout title="我的维基库">
  <div class="main-container-simple">
    <main>
      <h1>我的维基库</h1>
      <ul>
        {allWikiPages.map(page => (
          <li>
            <a href={`/wiki/${page.slug}`}>{page.data.title}</a>
            {page.data.classification && <p>分类: {page.data.classification.join(' > ')}</p>}
          </li>
        ))}
      </ul>
    </main>
  </div>
</BaseLayout>